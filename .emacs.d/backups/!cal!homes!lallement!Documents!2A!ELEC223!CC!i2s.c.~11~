/* i2s.c */

#include "i2s.h"
#include "port.h"

/* Les définitions des registres utiles se trouve dans port.h */

/*******************************
 * configuration du port i2s   *
 *******************************/

void i2s_init(void) {
  IISFCON = 0x300;   // 0b1100000000
  IISCON = 0x101;    // 0b100000001
  IISMOD = 0x89;     // 0b010001001
  IISPSR = 0x0;      // On place le prescaler à 2 pour IPSR_A e IPSR_B
}

