#ifndef TIMER_H
#define TIMER_H

#include <stdint.h>

#define ON   1
#define OFF  0

/* Configuration de l'Autoreload */
#define ONE_SHOT      0
#define INTERVAL_MODE 1

/* Configuration du reload Manuel */
#define NO_OPERATION 0
#define UPDATE       1

void timer_count(uint8_t timer_number, uint32_t value);
void timer_start(uint8_t timer_number);
void timer_stop(uint8_t timer_number);
void timer_manuel_reload(uint8_t timer_number, uint8_t value);
void timer_auto_reload(uint8_t timer_number, uint8_t value);

#endif
