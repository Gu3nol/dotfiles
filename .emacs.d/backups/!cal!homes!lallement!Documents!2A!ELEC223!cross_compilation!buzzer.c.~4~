/* buzzer.c */

#include "buzzer.h"
#include "timer.h"
#include "gpio.h"

void buzzer_init(void) {
  gpio_pin_config(&PCONE, 6, 2) // Passage de PE6 sur le timer3
}

void buzz(uint16_t time_ms, uint16_t freq_hz) {

  /* Initilisation des timers */
  timer_set(0, TIME(time_ms));
  timer_set(3, FREQ(freq_hz));

