import sys
import os

def readfile(filename):
    """
    Cette fonction lit le fichier passé en argument et génère des vecteurs de données.
    """

    # Ouverture du fichier en mode lecture
    f = open(filename, 'r')

    # Parcours des lignes du tableau et parse
    for line in f.readlines() :
        l = [int(x) for x in l]

        temps.append(l[0])




    #line.strip().split()

    sys.exit(-1)

    # Initialisation du filtre passe-haut
    tableau[0].append(tableau[0][3])

    # Calcul de dacc_out par filtrage passe-haut
    # Ajout dans une nouvelle colonne
    for y in range(1,len(tableau)-1) :
        tableau[y].append((0.1*(int(tableau[y-1][0]) +(int(tableau[y][1])-int(tableau[y][2]))-int(tableau[y-1][8]))))


# Enregistrement des données dans un nouveau
# fichier recu en argument 2 de la commande
def savefile(filename):

    # Ouverture du fichier en mode ecriture
    g = open(filename,'w')

    # Enregistrement des lignes
    for line in tableau :
        for champ in line :
            g.write(str(champ)+ ' ')
        g.write('\n')



def main():
    if len(sys.argv) < 3:
        print "Usage : ", sys.argv[0], "inputfile outputfile"
        sys.exit(-1)

    fin_filename  = sys.argv[1]
    fout_filename = sys.argv[2]

    # Utilisation des fonctions
    readfile(fin_filename)
    savefile(fin_filename)
    print("OK")

if __name__ == "__main__":
    main()
