/* fifo.c */

#include "fifo.h"
#include "port.h"

void send_word_to_fifo (int16_t word) {
  while(!(IISFCON & (1<<7))); // On test le bit 7 pour vÃ©rifier si la fifo est pleine
  IISFIF = word;
}

void send_stereo_sample (const int16_t sample[2]) {
  send_word_to_fifo(sample[0]);
  send_word_to_fifo(sample[1]);
}
