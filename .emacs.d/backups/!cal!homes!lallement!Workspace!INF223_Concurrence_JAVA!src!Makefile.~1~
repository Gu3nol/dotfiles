.SUFFIXES: .p.java .java .class

TAR=tar
## Utiliser /usr/local/bin/tar dans le PATH ou bien faire TAR=gtar

JAVAPREP=cpp -x c
PREPFLAGS=-C -P
JAVACFLAGS=

SOURCES=\
Semaphore.java\
Agent.java\
SemaphoreMain.java\
BoundedBuffer.java\
SemBoundedBuffer.java\
SemConsumer.java\
SemProducer.java\
SemBoundedBufferMain.java\
TimedBoundedBuffer.java\
Consumer.java\
Producer.java\
TimedConsumer.java\
TimedProducer.java\
BoundedBufferMain.java\
TimedBoundedBufferMain.java\
Barrier.java\
Worker.java\
Master.java\
BarrierMain.java\

CLASSES=$(SOURCES:.java=.class)

%.java: %.p.java
	$(JAVAPREP) $(PREPFLAGS) $< $@

%.class: %.java
	javac $(JAVACFLAGS) $<

all: $(CLASSES) index.html

$(CLASSES): $(SOURCES)

stud:
	make

prof:
	make PREPFLAGS="$(PREPFLAGS) -DPROF=true"

index.html: index.texi
	makeinfo --no-headers --html --ifinfo --no-split --css-include=style.css $< > $@

clean:
	-rm *~ *.class

force:
	cvs update -l *.texi
	sleep 2
	cvs update -l

install: force veryclean
	make stud
	$(TAR) zcf src.tar.gz $(SOURCES) Makefile
	chmod g=u * Makefile
	chmod o-rwx *
	chmod o=u-w $(SOURCES) style.css index.html src.tar.gz

veryclean: clean
	-rm $(SOURCES)
