  /* Initilisation */
  // leds
  leds_init();
  k2000(TIME(5000));
  // buzzer
  buzzer_init();
  //buzz(TIME(5000), FREQ(4000));

  /* Affichage */
  serial_puts("ARM >> Hello World !\r\n");
