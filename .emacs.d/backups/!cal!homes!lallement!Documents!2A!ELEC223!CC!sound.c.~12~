/* sound.c */

#include "sound.h"
#include "fifo.h"

void test_tone(const int16_t sample[72]) {
  int i = 0;

  const int16_t sample_stereo[72][2];
  for (i = 0, i<72, i++) {
    sample_stero[i][0] = sample[i];
    sample_stero[i][1] = sample[i];
  }
  while(1) {
    send_word_to_fifo(sample[i]);
    if(i < 72) i++;
    else i = 0;
  }
}
